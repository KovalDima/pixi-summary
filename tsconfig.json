{
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.d.ts",
    "src/*.d.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}